<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin01"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Control Number"/>

            <TextView
                android:padding="3dp"
                android:gravity="right"
                android:id="@+id/controlNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="VCITD-01-00000000001"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/lin01"
            android:id="@+id/lin02"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Receipt Number"/>

            <TextView
                android:padding="3dp"
                android:gravity="right"
                android:id="@+id/receiptNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="VCITD-01-00000000001"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/lin02"
            android:id="@+id/lin03"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Date"/>

            <TextView
                android:padding="3dp"
                android:gravity="right"
                android:id="@+id/dateValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="VCITD-01-00000000001"/>
        </LinearLayout>


        <View
            android:id="@+id/view01"
            android:layout_below="@id/lin03"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="@color/colorLtGrey"
            />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linOrders"
            android:layout_below="@id/view01"
            android:layout_above="@id/listItemTotal"
            android:layout_width="400dp"
            android:layout_height="match_parent"/>

        <TextView
            android:gravity="right"
            android:text="TOTAL: 001"
            android:layout_above="@id/btnVoidTransaction"
            android:id="@+id/listItemTotal"
            android:layout_width="400dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnVoidTransaction"
            android:text="VOID"
            android:background="@drawable/button_selector"
            android:layout_width="400dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
