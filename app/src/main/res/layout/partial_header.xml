<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toptoptop">

    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/sharp_close_white_24"
        android:tint="@color/colorBlack"/>

    <Button
        android:layout_margin="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/btnSearch"
        android:visibility="gone"
        android:text="test"
        android:layout_toLeftOf="@id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.nerdvana.positiveoffline.view.HidingEditText
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/search"
        android:visibility="gone"
        android:background="@null"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:hint="Search here"
        android:layout_toLeftOf="@id/backButton"
        android:layout_width="120dp"
        android:layout_height="70dp" />

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/backButton"
        android:id="@+id/displayHeader"
        android:layout_centerVertical="true"
        android:textSize="19sp"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="SETTING"
        android:textStyle="bold"/>

    <View
        android:layout_below="@id/displayHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLtGrey"/>

</RelativeLayout>